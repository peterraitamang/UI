<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="30dp">

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textColor="#E91E63"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15sp"/>

    <ImageButton
        android:id="@+id/img_btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_close_button"
        android:src="@drawable/ic_close_button"
        android:padding="7sp"
        app:layout_constraintTop_toTopOf="@id/tv_menu"
        app:layout_constraintBottom_toBottomOf="@id/tv_menu"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_screen_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Screen One"
        android:padding="20sp"
        android:background="@drawable/custom_shape1"
        app:layout_constraintTop_toTopOf="@id/tv_menu"
        app:layout_constraintLeft_toLeftOf="@id/tv_menu"
        app:layout_constraintRight_toRightOf="@id/tv_menu"
        android:layout_marginTop="80dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_screen_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Screen Two"
        android:padding="20sp"
        android:background="@drawable/custom_shape2"
        app:layout_constraintLeft_toLeftOf="@+id/btn_screen_one"
        app:layout_constraintRight_toRightOf="@+id/btn_screen_one"
        app:layout_constraintTop_toTopOf="@id/btn_screen_one"
        android:layout_marginTop="80dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_screen_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Screen Three"
        android:padding="20sp"
        android:background="@drawable/custom_shape3"
        app:layout_constraintTop_toTopOf="@id/btn_screen_two"
        app:layout_constraintRight_toRightOf="@+id/btn_screen_two"
        app:layout_constraintLeft_toLeftOf="@+id/btn_screen_two"
        android:layout_marginTop="80dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_screen_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Screen Four"
        android:padding="20sp"
        android:background="@drawable/custom_shape4"
        app:layout_constraintTop_toTopOf="@id/btn_screen_three"
        app:layout_constraintRight_toRightOf="@id/btn_screen_three"
        app:layout_constraintLeft_toLeftOf="@id/btn_screen_three"
        android:layout_marginTop="80dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_screen_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Screen five"
        android:padding="20sp"
        android:background="@drawable/custom_shape5"
        app:layout_constraintTop_toTopOf="@id/btn_screen_four"
        app:layout_constraintRight_toRightOf="@id/btn_screen_four"
        app:layout_constraintLeft_toLeftOf="@+id/btn_screen_four"
        android:layout_marginTop="80dp" />


</androidx.constraintlayout.widget.ConstraintLayout>